{
  "manifest_version": 2,
  "name": "Hydration2O",
  "version": "1.0",
  "description": "Stay healthy and hydrated with Hydration2O",

  "icons": {
  "128": "icon-128.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": ["alarms", "background"],

  "browser_action": {
    "default_title": "Hydration2O",
    "default_icon": "icon.png",
    "128": "icon-128.png",
    "default_popup": "popup.html"
  }

}
